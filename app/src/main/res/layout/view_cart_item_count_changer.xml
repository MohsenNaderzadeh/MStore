<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_cart_item_count_changer_minus"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@color/gray100"
            android:gravity="center"
            android:text="-"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_cart_item_count"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_toRightOf="@id/tv_cart_item_count_changer_minus"
            android:background="@color/gray50"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_cart_item_count_changer_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_toRightOf="@id/tv_cart_item_count"
            android:background="@color/gray100"
            android:gravity="center"
            android:text="+"
            android:textSize="14dp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>