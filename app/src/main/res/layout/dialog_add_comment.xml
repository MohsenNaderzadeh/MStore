<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/ed_commentDialog_commentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="عنوان نظر"
        android:maxLines="1"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/ed_commentDialog_commentContent"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:gravity="top|right"
        android:hint="متن نظر را وارد کنید"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_commentDialog_submitComment"
            style="@style/ButtonDefault.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="ثبت نظر" />

        <Button
            android:id="@+id/btn_commentDialog_cancel"
            style="@style/ButtonDefault.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn_commentDialog_submitComment"
            android:text="انصراف" />

        <ProgressBar
            android:id="@+id/pb_comments_addComments"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>