<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/regular</item>
    </style>

    <style name="ButtonDefault" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ButtonDefault.Primary" parent="ButtonDefault">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/background_button_primary</item>
    </style>

    <style name="ButtonDefault.Stroke" parent="ButtonDefault">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/background_button_stroke</item>
    </style>

    <style name="ButtonDefault.Secondary" parent="ButtonDefault">
        <item name="android:background">@drawable/background_button_secondary</item>
        <item name="android:textColor">@color/gray400</item>
    </style>

    <style name="EditTextDefault" parent="AppTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="EditTextDefault.Shipping" parent="EditTextDefault">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

</resources>
